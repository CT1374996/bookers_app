<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title  %></span>
<p>Body</p>
<span><%= book.body %></span>
<% end %>
<%= link_to "Show", show_book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>

<h2>New Book</h2>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>