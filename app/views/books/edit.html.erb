<h1>Editing Book</h1>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
<h4>Title</h4>
<p><%= f.text_field :title %></p>
<h4>Body</h4>
<p><%= f.text_area :body %></p>
<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", show_book_path(@book.id) %>
<a href = "/books">Back</a>